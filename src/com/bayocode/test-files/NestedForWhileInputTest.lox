assign is_running = true;
assign shopping_list = "";
assign item = null;

while (is_running == true) {
    input "add an item to the shoppping list: " item;

    if (item == "") {
        is_running = false;
    }
    else if (shopping_list == "") {
        shopping_list = item;
    }
    else {
        shopping_list = shopping_list + "," + item;
    }
}
output shopping_list;