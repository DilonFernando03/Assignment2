// Basic function definition and call
func sayHello() {
  output "Hello, world!";
}

// Call the function
sayHello();

// Function with parameters
func add(a, b) {
  return a + b;
}

// Call with arguments and store result
assign result = add(5, 3);
output "5 + 3 = " + result;

// Function with local variables
func calculateArea(width, height) {
  assign area = width * height;
  return area;
}

output "Area of rectangle: " + calculateArea(4, 7);

// Nested function calls
func square(x) {
  return x * x;
}

func sumOfSquares(a, b) {
  return square(a) + square(b);
}

output "Sum of squares of 3 and 4: " + sumOfSquares(3, 4);

// Recursion
func factorial(n) {
  if (n <= 1) {
    return 1;
  } else {
    return n * factorial(n - 1);
  }
}

output "Factorial of 5: " + factorial(5);

// Functions that modify global variables
assign counter = 0;

func increment() {
  counter = counter + 1;
  return counter;
}

output "Counter before: " + counter;
increment();
increment();
output "Counter after two increments: " + counter;

// Function with multiple returns
func max(a, b) {
  if (a > b) {
    return a;
  }
  return b;
}

output "Max of 10 and 7: " + max(10, 7);